<mvc:View controllerName="logaligroup.Employees.controller.MainView" 
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true" 
            xmlns="sap.m"
            xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox>
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin"/>
                            <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="10" width="200px" class="sapUiSmallMarginEnd" />
                            <Label id="labelCountry" labelFor="selCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin"/>
                            <Select id="selCountry" selectedKey="{jsonCountries>/CountryKey}" items="{jsonCountries>/ListCountry}" forceSelection="false" class="sapUiSmallMarginEnd">
                                <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnCleraFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <core:Fragment fragmentName="logaligroup.Employees.fragments.TableEmployee" type="XML"/>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
